<h1>My portfolio</h1>

<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_with url: "/search_stock", remote: true, method: :get, local: false do |form|%>
    <div class="form-group row" id="search-box">
      <div class="col-sm-9 no-right-padding">
        <%= form.text_field :stock,  placeholder:"Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= form.button raw('<i class="fa fa-search fa-2x"></i>'),  class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>

<div id="results">
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>

