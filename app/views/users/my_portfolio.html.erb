<h1>My portfolio</h1>

<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_with url: "/search_stock", remote: true, method: :get, local: false do |form|%>
    <div class="input-group mb-3" id="search-box">
        <%= form.text_field :stock,  placeholder:"Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
        <%= form.button raw('<i class="fa fa-search fa-2x"></i>'),  class: "btn btn-success input-group-text" %>
    </div>
  <% end %>
</div>

<div id="results">
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>

